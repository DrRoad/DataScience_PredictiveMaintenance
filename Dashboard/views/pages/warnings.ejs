<!DOCTYPE html>
<html>
<head>
  <% include ../partials/headercontent %>
  <link rel="stylesheet" type="text/css" href="css/jquery.dataTables.min.css">
  <script type="text/javascript" src="jquery/dist/jquery.min.js"></script>
  <script type="text/javascript" src="mdbootstrap/js/popper.min.js"></script>
  <script type="text/javascript" src="bootstrap/dist/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="scripts/canvasjs.min.js"></script>
  <script type="text/javascript" src="icheck/icheck.min.js"></script>
</head>
<body>
  <% include ../partials/navbar %>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">Hinweise / Warnungen / Alarme anzeigen</h3>
          </div>
          <div class="box-body" style="min-height: 612.5px">
            <form>
              <div class="form-row">
                <div class="form-group col-md-3">
                  <label for="datepicker">Zeitspanne</label>
                  <div class="input-daterange input-group" id="datepicker">
                      <input type="text" class="input-sm form-control" id="dateStart" name="start" value="07.09.2016"/>
                      <span class="input-group-addon">-</span>
                      <input type="text" class="input-sm form-control" id="dateEnd" name="end" value="23.09.2017" />
                  </div>
                </div>
                <div class="checkBoxContainer">
                  <div class="form-group col-md-1"></div>
                  <div class="form-group col-md-2">
                    <input type="checkbox" class="checkbox" id="checkboxInfos" text="Hinweise anzeigen" checked>
                  </div>
                  <div class="form-group col-md-2">
                    <input type="checkbox" class="checkbox" id="checkboxWarnings" text="Warnungen anzeigen" checked>
                  </div>
                  <div class="form-group col-md-2">
                    <input type="checkbox" class="checkbox" id="checkboxAlarms" text="Alarme anzeigen" checked>
                  </div>
                  <div class="form-group col-md-1"></div>
                </div>
                <div class="form-group col-md-1">
                  <button type="button" id="buttonShow" class="btn btn-block btn-primary"><i class="fa fa-play fa-lg"></i></button>
                </div>
              </div>
            </form>
            <div id="tableContainer" style="margin-top: 100px;">
              <div class="box-body table-responsive no-padding">
                <table id="warningTable" class="table table-striped">
                  <thead>
                    <tr>
                      <th>Datum</th>
                      <th>Typ</th>
                      <th>Beschreibung</th>
                    </tr>
                  </thead>
                  <tbody>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <script type="text/javascript" src="bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
  <script type="text/javascript" src="scripts/jquery.dataTables.min.js"></script>
  <script type="text/javascript" src="scripts/warnings.js"></script>
</body>
</html>
